<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="dismiss"
    tools:context="ccv.checkhelzio.registrocucshbelenes.ui.DateDialogHelzio">

    <RelativeLayout
        android:id="@+id/conte"
        android:elevation="24dp"
        android:background="#fff"
        android:layout_gravity="center"
        android:transitionName="@string/transition_date_dialog_helzio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/ir_a_la_fecha_seleccionada"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/dateDialogToolbar"
            android:layout_alignStart="@+id/conteDialog"
            android:layout_alignEnd="@+id/conteDialog"
            android:background="@color/colorPrimario"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <DatePicker xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/conteDialog"
            android:layout_below="@+id/dateDialogToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fff">
        </DatePicker>

        <android.support.v7.widget.ButtonBarLayout
            android:layout_alignStart="@+id/conteDialog"
            android:layout_alignEnd="@+id/conteDialog"
            android:layout_below="@+id/conteDialog"
            android:background="#fff"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="40dp">

            <Button
                android:textColor="@color/colorAcento"
                android:id="@+id/bt_dialog_cancenlar"
                android:text="@string/cancelar"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:textColor="@color/colorAcento"
                android:id="@+id/bt_dialog_aceptar"
                android:text="@string/aceptar"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </android.support.v7.widget.ButtonBarLayout>
    </RelativeLayout>


</FrameLayout>
